local OrionLib = {}

-- Services
local RunService = game:GetService("RunService")
local UserInputService = game:GetService("UserInputService")
local TweenService = game:GetService("TweenService")
local HttpService = game:GetService("HttpService")
local GuiService = game:GetService("GuiService")
local CoreGui = game:GetService("CoreGui")

local ScreenGui = Instance.new("ScreenGui")
ScreenGui.Name = HttpService:GenerateGUID(false)
ScreenGui.ResetOnSpawn = false
ScreenGui.Parent = CoreGui

local config = {}
local windows = {}
local notifications = {}

-- Config Setup
local function setupConfig(name)
    local configName = name or "Default"
    config[configName] = {}

    local success, loadedConfig = pcall(function()
        return game:GetObjects("rbxassetid://494429994")[1].Value
    end)

    if success and loadedConfig then
        local decoded = HttpService:JSONDecode(loadedConfig)
        if type(decoded) == "table" then
            config[configName] = decoded
        end
    end
end

-- Save Config
local function saveConfig(name)
    local configName = name or "Default"
    local encoded = HttpService:JSONEncode(config[configName])
    -- Implement saving logic here if needed
end

-- Draggable Function (CORREÇÃO DE CLIQUE/ARRASTO MANTIDA)
local function Draggable(Window, Config)
    local dragging = false
    local dragInput
    local dragStart
    local startPos

    Window.Titlebar.InputBegan:Connect(function(input)
        -- Apenas inicia o arrasto se o clique/toque for na Titlebar
        if (input.UserInputType == Enum.UserInputType.MouseButton1 or input.UserInputType == Enum.UserInputType.Touch) and input.Target:IsDescendantOf(Window.Titlebar) then
            dragging = true
            dragStart = input.Position
            startPos = Window.Frame.Position
            dragInput = input
        end
    end)

    UserInputService.InputChanged:Connect(function(input)
        if input == dragInput and dragging then
            local delta = input.Position - dragStart
            Window.Frame.Position = UDim2.new(startPos.X.Scale, startPos.X.Offset + delta.X, startPos.Y.Scale, startPos.Y.Offset + delta.Y)
        end
    end)

    UserInputService.InputEnded:Connect(function(input)
        if input == dragInput then
            dragging = false
            dragInput = nil
            -- Save position here if needed
            if Config.SaveConfig then
                local confName = Config.ConfigFolder or "Default"
                config[confName].Position = Window.Frame.Position
                saveConfig(confName)
            end
        end
    end)
end
-- End Draggable Function

-- Notification System (CORREÇÃO: Garantindo o Reposicionamento e Animação suaves)
local function MakeNotification(data)
    local notification = Instance.new("Frame")
    notification.Size = UDim2.new(0, 250, 0, 50)
    notification.AnchorPoint = Vector2.new(1, 1)
    notification.Position = UDim2.new(1, 260, 1, -10) -- Inicia fora da tela
    notification.BackgroundTransparency = 0
    notification.BackgroundColor3 = Color3.fromRGB(40, 40, 40)
    notification.BorderSizePixel = 0
    notification.Parent = ScreenGui
    notification.ZIndex = 999 

    local NameLabel = Instance.new("TextLabel")
    NameLabel.Size = UDim2.new(1, 0, 0, 20)
    NameLabel.Position = UDim2.new(0, 0, 0, 5)
    NameLabel.BackgroundTransparency = 1
    NameLabel.Font = Enum.Font.SourceSans
    NameLabel.Text = data.Name or "Notification"
    NameLabel.TextColor3 = Color3.fromRGB(255, 255, 255)
    NameLabel.TextSize = 18
    NameLabel.TextXAlignment = Enum.TextXAlignment.Left
    NameLabel.TextWrapped = true
    NameLabel.Parent = notification
    
    local ContentLabel = Instance.new("TextLabel")
    ContentLabel.Size = UDim2.new(1, 0, 0, 20)
    ContentLabel.Position = UDim2.new(0, 0, 0, 25)
    ContentLabel.BackgroundTransparency = 1
    ContentLabel.Font = Enum.Font.SourceSans
    ContentLabel.Text = data.Content or "Content here."
    ContentLabel.TextColor3 = Color3.fromRGB(180, 180, 180)
    ContentLabel.TextSize = 14
    ContentLabel.TextXAlignment = Enum.TextXAlignment.Left
    ContentLabel.TextWrapped = true
    ContentLabel.Parent = notification

    if data.Image then
        local Image = Instance.new("ImageLabel")
        Image.Size = UDim2.new(0, 30, 0, 30)
        Image.Position = UDim2.new(0, 5, 0, 10)
        Image.BackgroundTransparency = 1
        Image.Image = data.Image
        Image.Parent = notification
        
        NameLabel.Position = UDim2.new(0, 40, 0, 5)
        ContentLabel.Position = UDim2.new(0, 40, 0, 25)
        NameLabel.Size = UDim2.new(1, -40, 0, 20)
        ContentLabel.Size = UDim2.new(1, -40, 0, 20)
    end
    
    table.insert(notifications, notification)
    
    local function repositionNotifications()
        local yOffset = 0
        for i, notif in ipairs(notifications) do
            local targetY = ScreenGui.AbsoluteSize.Y - 10 - yOffset - notif.AbsoluteSize.Y
            TweenService:Create(notif, TweenInfo.new(0.3, Enum.EasingStyle.Quart, Enum.EasingDirection.Out), {Position = UDim2.new(1, -10, 0, targetY)}):Play()
            yOffset = yOffset + notif.AbsoluteSize.Y + 10
        end
    end

    -- Inicializa o posicionamento
    repositionNotifications()
    
    -- Timeout e Destruição
    local timeToWait = data.Time or 5
    delay(timeToWait, function()
        TweenService:Create(notification, TweenInfo.new(0.3), {Position = UDim2.new(1, 260, notification.Position.Y.Scale, notification.Position.Y.Offset)}):Play()
        delay(0.3, function()
            local index = table.find(notifications, notification)
            if index then
                table.remove(notifications, index)
            end
            notification:Destroy()
            repositionNotifications() -- Reposiciona após remover
        end)
    end)
end
OrionLib.MakeNotification = MakeNotification
-- End Notification System

-- Make Window
local function MakeWindow(data)
    local Window = {}
    Window.Tabs = {}

    local Config = {
        Name = data.Name or "ITALO Client",
        HidePremium = data.HidePremium or false,
        SaveConfig = data.SaveConfig or false,
        ConfigFolder = data.ConfigFolder,
        IntroEnabled = data.IntroEnabled or false,
        DefaultPosition = data.DefaultPosition or UDim2.new(0.5, -250, 0.5, -200),
        DefaultSize = UDim2.new(0, 500, 0, 400) -- Adicionado para controle de minimização
    }

    if Config.SaveConfig then
        setupConfig(Config.ConfigFolder)
        local loadedPos = config[Config.ConfigFolder].Position
        if loadedPos then
            Config.DefaultPosition = UDim2.new(loadedPos.X.Scale, loadedPos.X.Offset, loadedPos.Y.Scale, loadedPos.Y.Offset)
        end
    end

    local mainFrame = Instance.new("Frame")
    mainFrame.Size = Config.DefaultSize
    mainFrame.AnchorPoint = Vector2.new(0.5, 0.5)
    mainFrame.Position = Config.DefaultPosition 
    mainFrame.BackgroundTransparency = 0
    mainFrame.BackgroundColor3 = Color3.fromRGB(30, 30, 30)
    mainFrame.BorderSizePixel = 0
    mainFrame.Name = "Frame"
    mainFrame.Parent = ScreenGui

    local Titlebar = Instance.new("Frame")
    Titlebar.Size = UDim2.new(1, 0, 0, 30)
    Titlebar.BackgroundTransparency = 0
    Titlebar.BackgroundColor3 = Color3.fromRGB(40, 40, 40)
    Titlebar.BorderSizePixel = 0
    Titlebar.Name = "Titlebar"
    Titlebar.Parent = mainFrame
    
    local TitleLabel = Instance.new("TextLabel")
    TitleLabel.Size = UDim2.new(1, -60, 1, 0) 
    TitleLabel.Position = UDim2.new(0, 10, 0, 0)
    TitleLabel.BackgroundTransparency = 1
    TitleLabel.Font = Enum.Font.SourceSans
    TitleLabel.Text = Config.Name
    TitleLabel.TextColor3 = Color3.fromRGB(255, 255, 255)
    TitleLabel.TextSize = 20
    TitleLabel.TextXAlignment = Enum.TextXAlignment.Left
    TitleLabel.TextWrapped = true
    TitleLabel.Parent = Titlebar
    
    -- Botões de Controle 
    local CloseButton = Instance.new("TextButton")
    CloseButton.Size = UDim2.new(0, 30, 1, 0)
    CloseButton.Position = UDim2.new(1, -30, 0, 0)
    CloseButton.AnchorPoint = Vector2.new(1, 0)
    CloseButton.BackgroundTransparency = 0
    CloseButton.BackgroundColor3 = Color3.fromRGB(255, 0, 0)
    CloseButton.BorderSizePixel = 0
    CloseButton.Font = Enum.Font.SourceSans
    CloseButton.Text = "X"
    CloseButton.TextColor3 = Color3.fromRGB(255, 255, 255)
    CloseButton.TextSize = 18
    CloseButton.Parent = Titlebar
    
    CloseButton.MouseButton1Click:Connect(function()
        -- Lógica de fechar/destruir a GUI (o "X" fecha completamente)
        ScreenGui:Destroy()
    end)
    
    local MinimizeButton = Instance.new("TextButton")
    MinimizeButton.Size = UDim2.new(0, 30, 1, 0)
    MinimizeButton.Position = UDim2.new(1, -60, 0, 0)
    MinimizeButton.AnchorPoint = Vector2.new(1, 0)
    MinimizeButton.BackgroundTransparency = 0
    MinimizeButton.BackgroundColor3 = Color3.fromRGB(0, 170, 255)
    MinimizeButton.BorderSizePixel = 0
    MinimizeButton.Font = Enum.Font.SourceSans
    MinimizeButton.Text = "-"
    MinimizeButton.TextColor3 = Color3.fromRGB(255, 255, 255)
    MinimizeButton.TextSize = 18
    MinimizeButton.Parent = Titlebar
    
    -- CORREÇÃO: Lógica de Minimizar/Maximizar Suave
    local minimized = false
    local TabContainer = Instance.new("Frame")
    TabContainer.Size = UDim2.new(0.2, 0, 1, -30)
    TabContainer.Position = UDim2.new(0, 0, 0, 30)
    TabContainer.BackgroundTransparency = 0
    TabContainer.BackgroundColor3 = Color3.fromRGB(35, 35, 35)
    TabContainer.BorderSizePixel = 0
    TabContainer.Name = "TabContainer"
    TabContainer.Parent = mainFrame

    local ContentContainer = Instance.new("Frame")
    ContentContainer.Size = UDim2.new(0.8, 0, 1, -30)
    ContentContainer.Position = UDim2.new(0.2, 0, 0, 30)
    ContentContainer.BackgroundTransparency = 0
    ContentContainer.BackgroundColor3 = Color3.fromRGB(30, 30, 30)
    ContentContainer.BorderSizePixel = 0
    ContentContainer.Name = "ContentContainer"
    ContentContainer.Parent = mainFrame
    
    MinimizeButton.MouseButton1Click:Connect(function()
        minimized = not minimized
        if minimized then
            -- Minimiza: Reduz o tamanho da janela para apenas a Titlebar
            TweenService:Create(mainFrame, TweenInfo.new(0.3, Enum.EasingStyle.Quad, Enum.EasingDirection.Out), {Size = UDim2.new(Config.DefaultSize.X.Scale, Config.DefaultSize.X.Offset, 0, 30)}):Play()
            TabContainer.Visible = false
            ContentContainer.Visible = false
            MinimizeButton.Text = "☐" 
        else
            -- Maximiza: Retorna ao tamanho original
            TabContainer.Visible = true
            ContentContainer.Visible = true
            TweenService:Create(mainFrame, TweenInfo.new(0.3, Enum.EasingStyle.Quad, Enum.EasingDirection.Out), {Size = Config.DefaultSize}):Play()
            MinimizeButton.Text = "-"
        end
    end)


    
    local TabList = Instance.new("UIListLayout")
    TabList.Padding = UDim.new(0, 5)
    TabList.HorizontalAlignment = Enum.HorizontalAlignment.Center
    TabList.VerticalAlignment = Enum.VerticalAlignment.Top
    TabList.Parent = TabContainer

    -- Dragging
    Draggable({Frame = mainFrame, Titlebar = Titlebar}, Config)

    local currentTab
    
    -- Make Tab
    function Window:MakeTab(data)
        local Tab = {}
        Tab.Elements = {}
        
        local TabButton = Instance.new("TextButton")
        TabButton.Size = UDim2.new(1, -10, 0, 40)
        TabButton.Position = UDim2.new(0.5, 0, 0, 5)
        TabButton.AnchorPoint = Vector2.new(0.5, 0)
        TabButton.BackgroundTransparency = 0
        TabButton.BackgroundColor3 = Color3.fromRGB(50, 50, 50)
        TabButton.BorderSizePixel = 0
        TabButton.Font = Enum.Font.SourceSans
        TabButton.Text = data.Name or "Tab"
        TabButton.TextColor3 = Color3.fromRGB(255, 255, 255)
        TabButton.TextSize = 16
        TabButton.Parent = TabContainer

        local ContentFrame = Instance.new("Frame")
        ContentFrame.Size = UDim2.new(1, 0, 1, 0)
        ContentFrame.BackgroundTransparency = 1
        ContentFrame.Name = "ContentFrame"
        ContentFrame.Parent = ContentContainer
        ContentFrame.Visible = false
        
        local ContentLayout = Instance.new("UIListLayout")
        ContentLayout.Padding = UDim.new(0, 5)
        ContentLayout.HorizontalAlignment = Enum.HorizontalAlignment.Left
        ContentLayout.VerticalAlignment = Enum.VerticalAlignment.Top
        ContentLayout.Parent = ContentFrame

        local ContentPadding = Instance.new("UIPadding")
        ContentPadding.PaddingBottom = UDim.new(0, 5)
        ContentPadding.PaddingTop = UDim.new(0, 5)
        ContentPadding.PaddingLeft = UDim.new(0, 10)
        ContentPadding.PaddingRight = UDim.new(0, 10)
        ContentPadding.Parent = ContentFrame
        
        -- Tab Selection Logic
        local function selectTab()
            if currentTab then
                currentTab.Button.BackgroundColor3 = Color3.fromRGB(50, 50, 50)
                currentTab.Content.Visible = false
            end
            
            TabButton.BackgroundColor3 = Color3.fromRGB(60, 60, 60)
            ContentFrame.Visible = true
            currentTab = {Button = TabButton, Content = ContentFrame}
        end
        
        TabButton.MouseButton1Click:Connect(selectTab)
        
        if not currentTab then
            selectTab()
        end
        
        table.insert(Window.Tabs, Tab)
        
        -- Add Button
        function Tab:AddButton(data)
            local Button = Instance.new("TextButton")
            Button.Size = UDim2.new(1, 0, 0, 30)
            Button.BackgroundTransparency = 0
            Button.BackgroundColor3 = Color3.fromRGB(45, 45, 45)
            Button.BorderSizePixel = 0
            Button.Font = Enum.Font.SourceSans
            Button.Text = data.Name or "Button"
            Button.TextColor3 = Color3.fromRGB(255, 255, 255)
            Button.TextSize = 16
            Button.TextXAlignment = Enum.TextXAlignment.Left
            Button.Parent = ContentFrame
            
            local TextPadding = Instance.new("UIPadding")
            TextPadding.PaddingLeft = UDim.new(0, 5)
            TextPadding.Parent = Button

            Button.MouseButton1Click:Connect(function()
                if data.Callback then
                    data.Callback()
                end
            end)
            
            table.insert(Tab.Elements, Button)
            return Button
        end
        
        -- Add Paragraph
        function Tab:AddParagraph(title, content)
            local Frame = Instance.new("Frame")
            Frame.Size = UDim2.new(1, 0, 0, 60)
            Frame.BackgroundTransparency = 0
            Frame.BackgroundColor3 = Color3.fromRGB(40, 40, 40)
            Frame.BorderSizePixel = 0
            Frame.Parent = ContentFrame
            
            local TitleLabel = Instance.new("TextLabel")
            TitleLabel.Size = UDim2.new(1, 0, 0, 20)
            TitleLabel.Position = UDim2.new(0, 5, 0, 5)
            TitleLabel.BackgroundTransparency = 1
            TitleLabel.Font = Enum.Font.SourceSans
            TitleLabel.Text = title or "Title"
            TitleLabel.TextColor3 = Color3.fromRGB(255, 255, 255)
            TitleLabel.TextSize = 18
            TitleLabel.TextXAlignment = Enum.TextXAlignment.Left
            TitleLabel.Parent = Frame
            
            local ContentLabel = Instance.new("TextLabel")
            ContentLabel.Size = UDim2.new(1, -10, 0, 30)
            ContentLabel.Position = UDim2.new(0, 5, 0, 25)
            ContentLabel.BackgroundTransparency = 1
            ContentLabel.Font = Enum.Font.SourceSans
            ContentLabel.Text = content or "Content"
            ContentLabel.TextColor3 = Color3.fromRGB(180, 180, 180)
            ContentLabel.TextSize = 14
            ContentLabel.TextXAlignment = Enum.TextXAlignment.Left
            ContentLabel.TextWrapped = true
            ContentLabel.Parent = Frame
            
            table.insert(Tab.Elements, Frame)
            return Frame
        end
        
        -- Add Toggle
        function Tab:AddToggle(data)
            local ToggleFrame = Instance.new("TextButton") 
            ToggleFrame.Size = UDim2.new(1, 0, 0, 30)
            ToggleFrame.BackgroundTransparency = 0
            ToggleFrame.BackgroundColor3 = Color3.fromRGB(45, 45, 45)
            ToggleFrame.BorderSizePixel = 0
            ToggleFrame.Font = Enum.Font.SourceSans
            ToggleFrame.Text = data.Name or "Toggle"
            ToggleFrame.TextColor3 = Color3.fromRGB(255, 255, 255)
            ToggleFrame.TextSize = 16
            ToggleFrame.TextXAlignment = Enum.TextXAlignment.Left
            ToggleFrame.Parent = ContentFrame
            
            local TextPadding = Instance.new("UIPadding")
            TextPadding.PaddingLeft = UDim.new(0, 5)
            TextPadding.Parent = ToggleFrame
            
            local ToggleIndicator = Instance.new("TextLabel")
            ToggleIndicator.Size = UDim2.new(0, 50, 1, 0)
            ToggleIndicator.Position = UDim2.new(1, -50, 0, 0)
            ToggleIndicator.AnchorPoint = Vector2.new(1, 0)
            ToggleIndicator.BackgroundTransparency = 1
            ToggleIndicator.Font = Enum.Font.SourceSans
            ToggleIndicator.TextColor3 = Color3.fromRGB(255, 255, 255)
            ToggleIndicator.TextSize = 16
            ToggleIndicator.TextXAlignment = Enum.TextXAlignment.Center
            ToggleIndicator.Parent = ToggleFrame
            
            local state = data.Default or false
            
            local function updateIndicator()
                if state then
                    ToggleIndicator.Text = "ON"
                    ToggleIndicator.TextColor3 = Color3.fromRGB(0, 255, 0)
                else
                    ToggleIndicator.Text = "OFF"
                    ToggleIndicator.TextColor3 = Color3.fromRGB(255, 0, 0)
                end
            end
            updateIndicator()
            
            ToggleFrame.MouseButton1Click:Connect(function()
                state = not state
                updateIndicator()
                if data.Callback then
                    data.Callback(state)
                end
            end)
            
            table.insert(Tab.Elements, ToggleFrame)
            return ToggleFrame
        end
        
        -- Add Slider
        function Tab:AddSlider(data)
            local Frame = Instance.new("Frame")
            Frame.Size = UDim2.new(1, 0, 0, 45)
            Frame.BackgroundTransparency = 0
            Frame.BackgroundColor3 = Color3.fromRGB(45, 45, 45)
            Frame.BorderSizePixel = 0
            Frame.Parent = ContentFrame
            
            local TitleLabel = Instance.new("TextLabel")
            TitleLabel.Size = UDim2.new(1, -50, 0, 20)
            TitleLabel.Position = UDim2.new(0, 5, 0, 5)
            TitleLabel.BackgroundTransparency = 1
            TitleLabel.Font = Enum.Font.SourceSans
            TitleLabel.Text = data.Name or "Slider"
            TitleLabel.TextColor3 = Color3.fromRGB(255, 255, 255)
            TitleLabel.TextSize = 16
            TitleLabel.TextXAlignment = Enum.TextXAlignment.Left
            TitleLabel.Parent = Frame
            
            local ValueLabel = Instance.new("TextLabel")
            ValueLabel.Size = UDim2.new(0, 40, 0, 20)
            ValueLabel.Position = UDim2.new(1, -45, 0, 5)
            ValueLabel.AnchorPoint = Vector2.new(1, 0)
            ValueLabel.BackgroundTransparency = 1
            ValueLabel.Font = Enum.Font.SourceSans
            ValueLabel.TextColor3 = Color3.fromRGB(255, 255, 255)
            ValueLabel.TextSize = 16
            ValueLabel.TextXAlignment = Enum.TextXAlignment.Center
            ValueLabel.Parent = Frame
            
            local SliderFrame = Instance.new("Frame")
            SliderFrame.Size = UDim2.new(1, -10, 0, 10)
            SliderFrame.Position = UDim2.new(0, 5, 0, 30)
            SliderFrame.BackgroundTransparency = 0
            SliderFrame.BackgroundColor3 = Color3.fromRGB(30, 30, 30)
            SliderFrame.BorderSizePixel = 0
            SliderFrame.Parent = Frame
            
            local SliderFill = Instance.new("Frame")
            SliderFill.Size = UDim2.new(0, 0, 1, 0)
            SliderFill.BackgroundTransparency = 0
            SliderFill.BackgroundColor3 = Color3.fromRGB(0, 170, 255)
            SliderFill.BorderSizePixel = 0
            SliderFill.Parent = SliderFrame
            
            local SliderHandle = Instance.new("TextButton")
            SliderHandle.Size = UDim2.new(0, 10, 1, 0)
            SliderHandle.Position = UDim2.new(0, 0, 0, 0)
            SliderHandle.BackgroundTransparency = 0
            SliderHandle.BackgroundColor3 = Color3.fromRGB(255, 255, 255)
            SliderHandle.BorderSizePixel = 0
            SliderHandle.Parent = SliderFrame
            
            local min = data.Min or 0
            local max = data.Max or 100
            local default = data.Default or min
            local rounding = data.Rounding or 0
            local step = data.Step or 1
            
            local currentValue = default
            
            local function updateSlider(pos)
                local xPos = math.clamp(pos.X, 0, SliderFrame.AbsoluteSize.X)
                local percentage = xPos / SliderFrame.AbsoluteSize.X
                local rawValue = min + (max - min) * percentage
                local roundedValue = math.floor(rawValue / step + 0.5) * step
                
                currentValue = math.floor(roundedValue * (10 ^ rounding)) / (10 ^ rounding)
                
                local currentPercentage = (currentValue - min) / (max - min)
                local handlePos = currentPercentage * SliderFrame.AbsoluteSize.X
                
                SliderFill.Size = UDim2.new(0, handlePos, 1, 0)
                SliderHandle.Position = UDim2.new(0, handlePos - SliderHandle.Size.X.Offset / 2, 0, 0)
                ValueLabel.Text = tostring(currentValue)
                
                if data.Callback then
                    data.Callback(currentValue)
                end
            end
            
            -- Initial update
            updateSlider({X = (default - min) / (max - min) * SliderFrame.AbsoluteSize.X})
            
            local draggingSlider = false
            SliderFrame.InputBegan:Connect(function(input)
                if input.UserInputType == Enum.UserInputType.MouseButton1 or input.UserInputType == Enum.UserInputType.Touch then
                    draggingSlider = true
                    updateSlider(input.Position - SliderFrame.AbsolutePosition)
                end
            end)
            
            UserInputService.InputChanged:Connect(function(input)
                if draggingSlider and (input.UserInputType == Enum.UserInputType.MouseButton1 or input.UserInputType == Enum.UserInputType.Touch) then
                    updateSlider(input.Position - SliderFrame.AbsolutePosition)
                end
            end)
            
            UserInputService.InputEnded:Connect(function(input)
                if input.UserInputType == Enum.UserInputType.MouseButton1 or input.UserInputType == Enum.UserInputType.Touch then
                    draggingSlider = false
                end
            end)
            
            table.insert(Tab.Elements, Frame)
            return Frame
        end
        
        -- Return Tab
        return Tab
    end
    
    -- Return Window
    return Window
end
OrionLib.MakeWindow = MakeWindow

-- Premium Status (simplified placeholder)
function OrionLib.IsPremium()
    return game.Players.LocalPlayer.MembershipType == Enum.MembershipType.Premium
end

-- Final return
return OrionLib
