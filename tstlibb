
-- ROBLUE UI LIBRARY
-- Recreated to match original ITALO CLIENT visuals
-- PC & Mobile compatible

local Players = game:GetService("Players")
local TweenService = game:GetService("TweenService")
local Player = Players.LocalPlayer

local Roblue = {}

function Roblue:CreateWindow(title)
    local ScreenGui = Instance.new("ScreenGui")
    ScreenGui.Name = "ROBLUE"
    ScreenGui.Parent = Player:WaitForChild("PlayerGui")
    ScreenGui.ResetOnSpawn = false

    local Main = Instance.new("Frame")
    Main.Size = UDim2.fromScale(0.55,0.6)
    Main.Position = UDim2.fromScale(0.22,0.2)
    Main.BackgroundColor3 = Color3.fromRGB(18,18,18)
    Main.BorderSizePixel = 0
    Main.Parent = ScreenGui
    Main.Active = true
    Main.Draggable = true

    local UICorner = Instance.new("UICorner", Main)
    UICorner.CornerRadius = UDim.new(0,16)

    local Top = Instance.new("Frame", Main)
    Top.Size = UDim2.new(1,0,0,40)
    Top.BackgroundColor3 = Color3.fromRGB(25,25,25)
    Top.BorderSizePixel = 0

    local titleLabel = Instance.new("TextLabel", Top)
    titleLabel.Size = UDim2.new(1,-80,1,0)
    titleLabel.Position = UDim2.new(0,15,0,0)
    titleLabel.Text = title or "ROBLUE"
    titleLabel.Font = Enum.Font.GothamBold
    titleLabel.TextSize = 18
    titleLabel.TextColor3 = Color3.new(1,1,1)
    titleLabel.BackgroundTransparency = 1
    titleLabel.TextXAlignment = Enum.TextXAlignment.Left

    local close = Instance.new("TextButton", Top)
    close.Size = UDim2.fromOffset(30,30)
    close.Position = UDim2.new(1,-40,0,5)
    close.Text = "X"
    close.Font = Enum.Font.GothamBold
    close.TextSize = 14
    close.TextColor3 = Color3.new(1,1,1)
    close.BackgroundColor3 = Color3.fromRGB(40,40,40)

    local minimize = Instance.new("TextButton", Top)
    minimize.Size = UDim2.fromOffset(30,30)
    minimize.Position = UDim2.new(1,-75,0,5)
    minimize.Text = "-"
    minimize.Font = Enum.Font.GothamBold
    minimize.TextSize = 14
    minimize.TextColor3 = Color3.new(1,1,1)
    minimize.BackgroundColor3 = Color3.fromRGB(40,40,40)

    close.MouseButton1Click:Connect(function()
        ScreenGui:Destroy()
    end)

    minimize.MouseButton1Click:Connect(function()
        TweenService:Create(Main, TweenInfo.new(0.3), {Size = UDim2.fromScale(0.55,0)}):Play()
    end)

    return ScreenGui
end

return Roblue
